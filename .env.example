# ============================================
# KILLA AI — Environment Variables Template
# Copy this to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# --- SERVER ---
PORT=8787

# --- CLERK AUTH ---
# Get from: https://dashboard.clerk.com
# Use pk_test_ for local, pk_live_ for production
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET

# --- SERP API (DeepSearch) ---
# Get from: https://serpapi.com
SERPAPI_API_KEY=your_serpapi_key

# --- MODELSLAB (Image + Video generation) ---
# Get from: https://modelslab.com
MODELSLAB_API_KEY=your_modelslab_key

# --- XAI API (Video - optional) ---
XAI_API_KEY=your_xai_key

# --- OPENAI API (optional fallback) ---
OPENAI_API_KEY=

# --- KNOWLEDGE STUDIO ADMIN ---
# Comma-separated Clerk user IDs with admin write access
# Get your user ID from Clerk dashboard → Users
KNOWLEDGE_ADMIN_USER_IDS=user_YOUR_CLERK_USER_ID

# --- BETA ACCESS ADMIN ---
# Comma-separated Clerk user IDs with license admin access
BETA_ADMIN_USER_IDS=user_YOUR_CLERK_USER_ID

# --- BETA CONFIG ---
BETA_EARLY_ACCESS_CHECKOUT_URL=https://your-checkout-link.com
BETA_SUPPORT_EMAIL=support@yourdomain.com

# --- LLAMAINDEX (LOCAL DEV ONLY — set false in production) ---
# Requires Ollama running locally. MUST be false on Railway/cloud.
LLAMAINDEX_ENABLED=false
KNOWLEDGE_SEARCH_ENGINE=heuristic
LLAMAINDEX_EMBED_PROVIDER=ollama
LLAMAINDEX_EMBED_MODEL=nomic-embed-text
LLAMAINDEX_TOP_K=16
OLLAMA_BASE_URL=http://127.0.0.1:11434

# --- CORS (production) ---
# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:5173
